<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/light_content_bg_pressed" />
            <corners android:radius="7dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="@color/light_card_background" />
            <corners android:radius="8dp" />
            <stroke android:width="0.5dp" android:color="@color/light_stroke_card_view_color" />
        </shape>
    </item>
</selector>